{
  "name": "demeter",
  "version": "1.3.0",
  "description": "UCP Blaster 3000",
  "main": "main.js",
  "dependencies": {
    "auto-launch": "^5.0.6",
    "ejs": "^3.1.10",
    "electron-ejs": "^1.2.1",
    "json5": "^2.2.3",
    "mica-electron": "^1.5.16",
    "temp": "^0.9.4",
    "xeue-config": "^2.2.8",
    "xeue-logs": "^2.3.6",
    "xeue-shell": "^1.4.2"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "build": "electron-builder --win"
  },
  "build": {
    "appId": "com.xeue.demeter",
    "productName": "Demeter",
    "files": [
      "**/*",
      "static/*",
      "lib/*"
    ],
    "win": {
      "icon": "static/img/icon/demeter.ico",
      "asarUnpack": "**/lib/*.exe",
      "requestedExecutionLevel": "requireAdministrator",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "artifactName": "Demeter-v${version}.exe"
    }
  },
  "author": "Sam Chilton",
  "license": "MIT",
  "devDependencies": {
    "electron": "^35.2.0",
    "electron-builder": "^26.0.12"
  }
}
